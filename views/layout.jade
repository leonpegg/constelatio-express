doctype html
html
  head
    base(href='/')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Constelatio - Open source asteroid imagery sharing platform
    meta(name='description', content='Constelatio is the first open-source platform for sharing crowd-sourced asteroid imagery, including observations that have already have been logged, as well as newly observed Near Earth Objects.')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='css/normalize.min.css')
    link(rel='stylesheet', href='css/main.css')
    link(rel='stylesheet', href='css/responsive.css')
    link(rel='stylesheet', href='css/angucomplete.css')
    link(rel='stylesheet', href='fancybox/jquery.fancybox-1.3.4.css', type="text/css", media="screen")
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900', rel='stylesheet',type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900', rel='stylesheet', type='text/css')
  body(ng-app='constelatioApp')
    #container
      header#header
        include navbar
        block intro
      #main(role='main')
        block content
      footer#footer.padding-30
        include footer
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.js', type='text/javascript')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-route.js', type='text/javascript')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-resource.js', type='text/javascript')
    script(src='javascripts/angucomplete.js', type='text/javascript')
    script(src='javascripts/app.js', type='text/javascript')
    script(src='javascripts/controllers.js', type='text/javascript')
    script(src='javascripts/directives.js', type='text/javascript')
    script(type="text/javascript", src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js")
    script(type="text/javascript", src="fancybox/jquery.fancybox-1.3.4.pack.js")
